generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum DiscoverItemType {
  MOVIE
  SERIES
  GAME
  BOOK
  COURSE
  OTHER
}

enum ListRole {
  VIEWER
  EDITOR
}

enum TrackingStatus {
  BACKLOG
  IN_PROGRESS
  COMPLETED
  DROPPED
  ON_HOLD
}

enum FriendshipStatus {
  PENDING
  ACCEPTED
  BLOCKED
}

enum ListVisibility {
  PRIVATE
  FRIENDS_ONLY
  PUBLIC
}

model DiscoverItem {
  id          String             @id @default(uuid())
  type        DiscoverItemType
  category    String?
  title       String
  description String?
  imageUrl    String?
  createdAt   DateTime           @default(now())
  updatedAt   DateTime           @updatedAt
  userLists   UserList[]         @relation("UserListItems")
  trackers    UserItemTracking[]

  owner   User?   @relation(fields: [ownerId], references: [id])
  ownerId String?

  @@index([type])
  @@index([title])
  @@index([category])
}

model User {
  id                     String             @id @default(uuid())
  username               String             @unique
  passwordHash           String
  createdAt              DateTime           @default(now())
  updatedAt              DateTime           @updatedAt
  memberships            ListMembership[]
  ownedLists             UserList[]         @relation("Owner")
  trackings              UserItemTracking[]
  discoverItems          DiscoverItem[]
  sentFriendRequests     Friendship[]       @relation("SentRequests")
  receivedFriendRequests Friendship[]       @relation("ReceivedRequests")
  likedLists             UserList[]         @relation("ListLikes")
  savedLists             SavedList[]

  @@index([username])
}

model UserList {
  id            String           @id @default(uuid())
  name          String
  description   String?          @db.Text
  coverImageUrl String?
  tags          String[]
  isPinned      Boolean          @default(false)
  viewsCount    Int              @default(0)
  members       ListMembership[]
  discoverItems DiscoverItem[]   @relation("UserListItems")
  createdAt     DateTime         @default(now())
  updatedAt     DateTime         @updatedAt
  visibility    ListVisibility   @default(PRIVATE)
  likedBy       User[]           @relation("ListLikes")
  savedBy       SavedList[]

  owner   User   @relation(name: "Owner", fields: [ownerId], references: [id])
  ownerId String

  @@index([name])
}

model ListMembership {
  id        String   @id @default(uuid())
  role      ListRole @default(VIEWER)
  createdAt DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String

  list   UserList @relation(fields: [listId], references: [id], onDelete: Cascade)
  listId String

  @@unique([userId, listId])
  @@index([userId])
  @@index([listId])
}

model UserItemTracking {
  id     String         @id @default(uuid())
  status TrackingStatus @default(BACKLOG)

  rating Int?
  review String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String

  item   DiscoverItem @relation(fields: [itemId], references: [id], onDelete: Cascade)
  itemId String

  @@unique([userId, itemId])
  @@index([userId])
  @@index([itemId])
}

model Friendship {
  id        String           @id @default(uuid())
  status    FriendshipStatus @default(PENDING)
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt

  requester   User   @relation("SentRequests", fields: [requesterId], references: [id], onDelete: Cascade)
  requesterId String

  addressee   User   @relation("ReceivedRequests", fields: [addresseeId], references: [id], onDelete: Cascade)
  addresseeId String

  @@unique([requesterId, addresseeId])
  @@index([requesterId])
  @@index([addresseeId])
}

model SavedList {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String

  list   UserList @relation(fields: [listId], references: [id], onDelete: Cascade)
  listId String

  @@unique([userId, listId])
  @@index([userId])
  @@index([listId])
}

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum ItemType {
  MOVIE
  SERIES
  GAME
  BOOK
  COURSE
  OTHER
}

enum ItemStatus {
  TODO
  DONE
}

model DiscoverItem {
  id          String     @id @default(cuid())
  type        ItemType
  category    String?
  title       String
  description String?
  imageUrl    String?
  status      ItemStatus @default(TODO)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@index([type])
  @@index([status])
  @@index([createdAt])
}

generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum DiscoverItemType {
  MOVIE
  SERIES
  GAME
  BOOK
  COURSE
  OTHER
}

model DiscoverItem {
  id             String           @id @default(uuid())
  type           DiscoverItemType
  category       String?
  title          String
  description    String?
  imageUrl       String?
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
  userLists      UserList[]       @relation("UserListItems")
  usersSaved     User[]           @relation("UserSavedItems")
  usersCompleted User[]           @relation("UserCompletedItems")
  owner          User?            @relation(fields: [ownerId], references: [id])
  ownerId        String?

  @@index([type])
  @@index([title])
  @@index([category])
}

model User {
  id                     String         @id @default(uuid())
  username               String         @unique
  passwordHash           String
  createdAt              DateTime       @default(now())
  updatedAt              DateTime       @updatedAt
  lists                  UserList[]     @relation("UserListUsers")
  ownedLists             UserList[]     @relation("Owner")
  savedDiscoverItems     DiscoverItem[] @relation("UserSavedItems")
  completedDiscoverItems DiscoverItem[] @relation("UserCompletedItems")
  discoverItems          DiscoverItem[]

  @@index([username])
}

model UserList {
  id            String         @id @default(uuid())
  name          String
  users         User[]         @relation("UserListUsers")
  discoverItems DiscoverItem[] @relation("UserListItems")
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  owner         User           @relation(name: "Owner", fields: [ownerId], references: [id])
  ownerId       String

  @@index([name])
}
